{
    "controller": "controllers/record",
    "boolFilterList": [
        "onlyMy"
    ],
    "recordViews": {
        "detail": "views/templates/event/record/detail"
    },
    "activityDefs": {
        "activitiesCreate": true,
        "historyCreate": true
    },
    "bottomPanels": {
        "detail": [
            {
                "name": "scheduler",
                "label": "Scheduler",
                "view": "crm:views/meeting/record/panels/scheduler",
                "disabled": true,
                "order": 3
            }
        ],
        "edit": [
            {
                "name": "scheduler",
                "label": "Scheduler",
                "view": "crm:views/meeting/record/panels/scheduler",
                "disabled": true,
                "order": 1
            }
        ]
    },
    "filterList": [
        {
            "name": "planned"
        },
        {
            "name": "held",
            "style": "success"
        },
        {
            "name": "todays"
        }
    ],
    "forcePatchAttributeDependencyMap": {
        "dateEnd": [
            "dateStart"
        ],
        "dateEndDate": [
            "dateStartDate"
        ]
    },
    "dynamicLogic": {
        "fields": {
            "duration": {
                "readOnly": {
                    "conditionGroup": [
                        {
                            "type": "isTrue",
                            "attribute": "isAllDay"
                        }
                    ]
                }
            },
            "reminders": {
                "visible": {
                    "conditionGroup": [
                        {
                            "type": "isNotEmpty",
                            "attribute": "assignedUserId",
                            "data": {
                                "field": "assignedUser"
                            }
                        }
                    ]
                }
            },
            "numberOfFloors": {
                "required": {
                    "conditionGroup": [
                        {
                            "type": "equals",
                            "attribute": "eventTypeId",
                            "data": {
                                "field": "eventType",
                                "values": {
                                    "eventTypeName": "Звітній концерт"
                                }
                            },
                            "value": "65e984224c6684f2f"
                        }
                    ]
                }
            },
            "map2": {
                "visible": {
                    "conditionGroup": [
                        {
                            "type": "greaterThanOrEquals",
                            "attribute": "numberOfFloors",
                            "value": 2
                        }
                    ]
                }
            },
            "map3": {
                "visible": {
                    "conditionGroup": [
                        {
                            "type": "greaterThanOrEquals",
                            "attribute": "numberOfFloors",
                            "value": 3
                        }
                    ]
                }
            }
        }
    },
    "kanbanViewMode": false,
    "color": "#bc29bf",
    "iconClass": "fas fa-star",
    "relationshipPanels": {
        "eventType": {
            "layout": null
        },
        "ticketTypes": {
            "layout": null
        },
        "tickets": {
            "layout": null
        }
    }
}